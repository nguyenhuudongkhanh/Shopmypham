@model WebBanHangOnline.Models.Page

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<form asp-controller="Pages" method="post" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="m-b-15">
            <button class="btn btn-primary">
                <i class="anticon anticon-save"></i>
                <span>Save</span>
            </button>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
        </li>
    </ul>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên pages</label>
                        <input type="text" class="form-control" asp-for="PageName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Nội dung pages</label>
                        <input type="text" class="form-control" asp-for="Contents">
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="productPrice">Ảnh sản phẩm</label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex align-items-center">

                        <div class="switch m-r-10">
                            <label>Active</label>
                            <select id="Pusblished" name="Pusblished" class="list-box tri-state">
                                <option value="">Not Set</option>
                                <option value="true">True</option>
                                <option value="false">False</option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group">

                        <label class="font-weight-semibold" for="productSize">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" type="text" />

                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productColors">MetaDesc</label>
                        <input asp-for="MetaDesc" class="form-control" type="text" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">MetaKey</label>
                        <input asp-for="MetaKey" class="form-control" type="text" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">Biệt danh</label>
                        <input asp-for="Alias" class="form-control" type="text" />
                    </div>
                    <div class="form-group">

                        <label asp-for="CreatedDate" class="control-label">Ngày tạo pages:</label>
                        <input asp-for="CreatedDate" class="form-control" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">Thứ tự pages:</label>
                        <input asp-for="Ordering" class="form-control" type="text" />
                    </div>
                </div>
            </div>
        </div>

    </div>


</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

