@model WebBanHangOnline.Models.Role

@{
    ViewData["Title"] = "Xác nhận xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Chỉnh sửa</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Roles" asp-action="Index">Role</a>
            <span class="breadcrumb-item active">Xóa</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Xác nhận xóa quyền truy cập</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>Mã truy cập:</td>
                        <td class="text-dark font-weight-semibold">@Model.RoleId</td>
                    </tr>
                    <tr>
                        <td>Tên quyền truy cập:</td>
                        <td class="text-dark font-weight-semibold">@Model.RoleName</td>

                    </tr>

                    <tr>
                        <td>Mô tả:</td>
                        <td class="text-dark font-weight-semibold">@Model.Description</td>

                    </tr>
                    <tr>
                        <td>Xác nhận xóa:</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@Model.RoleId">
                                <input type="hidden" asp-for="RoleId" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                
                                <a class="btn btn-warning  m-r-5" asp-action="Index">Quay Lại</a>
                            </form>
                        </td>
                       

                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>

