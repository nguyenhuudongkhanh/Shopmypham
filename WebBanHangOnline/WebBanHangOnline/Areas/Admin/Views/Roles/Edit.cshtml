@model WebBanHangOnline.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Chỉnh sửa</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Roles" asp-action="Index">Role</a>
            <span class="breadcrumb-item active">Chỉnh sửa</span>
        </nav>
    </div>
</div>
<h1>Chỉnh sửa quyền truy cập</h1>
<form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId" />
    <div class="form-group">
    <div class="form-group col-md-6">
        <label class="col-sm-4 col-form-label">Tên truy cập</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name">
        </div>
    </div>
    <div class="form-group col-md-6">
        <label class="col-sm-2 col-form-label">Mô tả</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Description" placeholder="Description">
        </div>
    </div>

    <div class="form-group col-md-6">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-warning  m-r-5" asp-action="Index">Quay Lại</a>
        </div>
       
    </div>
    </div>
</form>




