@model WebBanHangOnline.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
    List<OrdersDetail> orderDetail = ViewBag.Detail;
}

<form asp-controller="Orders" method="post" asp-action="Edit" asp-route-id="@Model.OrdersId" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="OrdersId" />
    <input type="hidden" asp-for="CustomersId" />

    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                <img src="assets/images/others/thumb-16.jpg" alt="">
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">Skinny Men Blazer</h4>
                <p class="text-muted m-b-0">Code: #5325</p>
            </div>
        </div>
        <div class="m-b-15">
            <button class="btn btn-primary">
                <i class="anticon anticon-save"></i>
                <span>Save</span>

            </button>
            <a class="btn btn-warning m-r-5" asp-action="Index" asp-area="Admin" asp-controller="Orders">Quay Lại</a>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin sản phẩm</a>
        </li>

    </ul>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="OrderDate" class="control-label">Ngày đặt hàng</label>
                            <input asp-for="OrderDate" class="form-control" />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="ShipDate" class="control-label">Ngày ship hàng</label>
                            <input asp-for="ShipDate" class="form-control" />
                            <span asp-validation-for="ShipDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="font-weight-semibold" for="productCategory">Trạng thái đơn hàng</label>

                            <select class="custom-select" asp-for="TransactStatusId" style="min-width: 200px;" asp-items="ViewBag.TransactStatusId">
                                <option value="0" disabled selected>Chọn danh mục</option>
                            </select>

                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="font-weight-semibold" for="productCategory">Hình thức thanh toán</label>

                            <select class="custom-select" asp-for="PaymentId" style="min-width: 200px;" asp-items="ViewBag.PaymentID">
                                <option value="0" disabled selected>Chọn danh mục</option>
                            </select>

                        </div>
                        <div class="form-group col-6">
                            <label asp-for="PaymentDate" class="control-label">Ngày thanh toán</label>
                            <input asp-for="PaymentDate" class="form-control" />
                            <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <input type="checkbox" asp-for="Deleted" checked="">
                                    <label for="Deleted"></label>
                                </div>
                                <label>Hủy hàng</label>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <input type="checkbox" asp-for="Paid" checked="">
                                    <label for="Paid"></label>
                                </div>
                                <label>Thanh toán thành công</label>
                            </div>


                        </div>




                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Địa chỉ</label>
                        <input type="text" class="form-control" asp-for="Address">
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Giá sản phẩm</label>
                            <input type="text" class="form-control" asp-for="Price">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Tổng tiền</label>
                            <input type="text" class="form-control" asp-for="TotalMoney">
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>



</form>
@section Scripts{


    <!-- page js -->
    <script src="~/assetsAdmin/vendors/select2/select2.min.js"></script>
    <script src="~/assetsAdmin/vendors/quill/quill.min.js"></script>
    <script src="~/assetsAdmin/js/pages/e-commerce-product-edit.js"></script>
}










