@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanHangOnline.Models.Category>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Danh sách danh mục"] = "Danh sách danh mục" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}



<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
         
            <span class="breadcrumb-item active">Danh sách danh mục:page @CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-12">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" id="idRole" name="idRole" style="min-width: 200px;" asp-items="ViewBag.RoleId">
                            <option value="0" disabled selected>Chọn quyền truy cập</option>

                        </select>

                    </div>
                    <div class="m-b-10">
                        <select class="custom-select" id="idStatus" name="idStatus" style="min-width: 200px;" asp-items="ViewBag.lstrangthai">
                            <option value="" disabled selected>Chọn trạng thái</option>

                        </select>
                    </div>
                </div>
            </div>

        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Mã danh mục</th>
                        <th scope="col">Tiêu danh mục</th>
                        <th scope="col">Mô tả</th>
                        <th scope="col">Thuộc danh mục()</th>
                        <th scope="col">Cấp bậc</th>
                        <th scope="col">Sắp xếp</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Ảnh</th>
                        <th scope="col">Loại</th>
                        <th scope="col">banner</th>
                        <th scope="col">schemaMarkup</th>
                        <th scope="col">Sô lượng sản phẩm của danh mục</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CatId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CatName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ParentId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Levels)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ordering)
                                </td>
                                <td>
                                    @if (item.Published == true)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Active</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Block</div>
                                        </div>

                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Thumb)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tiltle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cover)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SchemaMarkup)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Products.Count)
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CatId" class="dropdown-item d-block p-h-15 p-v-10">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div>
                                                <i class="anticon anticon-edit"></i>
                                                <span class="m-l-10 text-success    ">Edit</span>
                                            </div>

                                        </div>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CatId" class="dropdown-item d-block p-h-15 p-v-10">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div>
                                                <i class="anticon anticon-delete"></i>
                                                <span class="m-l-10 text-primary">Delete</span>
                                            </div>

                                        </div>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CatId" class="dropdown-item d-block p-h-15 p-v-10">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div>
                                                <i class="anticon anticon-form"></i>
                                                <span class="m-l-10 text-danger">Detail</span>
                                            </div>

                                        </div>
                                    </a>

                                </td>
                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>




