@model WebBanHangOnline.Models.News

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}


<div class="page-header">
    <h2 class="header-title">Xóa tin</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="News" asp-action="Index">News</a>
            <span class="breadcrumb-item active">Thông Tin</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin tin tức: @Model.Tiltle</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>Mã tin:</td>
                        <td class="text-dark font-weight-semibold">@Model.PostId</td>
                    </tr>
                    <tr>
                        <td>Tên sản phẩm:</td>
                        <td class="text-dark font-weight-semibold">@Model.Tiltle</td>

                    </tr>

                    <tr>
                        <td>Mô tả ngắn:</td>
                        <td class="text-dark font-weight-semibold">@Model.Scontents</td>

                    </tr>

                    <tr>
                        <td>Mô tả:</td>
                        <td class="text-dark font-weight-semibold">@Model.Contents</td>

                    </tr>
                    <tr>
                        <td>Thuộc danh mục:</td>
                        <td class="text-dark font-weight-semibold">@Model.Cat</td>

                    </tr>
                    <tr>
                        <td>Ảnh sản phẩm:</td>
                        <td><img width="150" height="150" src="~/images/news/@Model.Thumb" alt="@Model.Tiltle"></td>

                    </tr>

                    <tr>
                        <td>Bí danh:</td>
                        <td class="text-dark font-weight-semibold">@Model.Alias</td>

                    </tr>
                    <tr>
                        <td>Ngày tạo:</td>
                        <td class="text-dark font-weight-semibold">@Model.CreteDate</td>

                    </tr>
                    <tr>
                        <td>Tác giả:</td>
                        <td class="text-dark font-weight-semibold">@Model.Author</td>

                    </tr>
                    <tr>
                        <td>Tài khoảng:</td>
                        <td class="text-dark font-weight-semibold">@Model.AccountId</td>

                    </tr>
                    <tr>
                        <td>Trạng thái tin:</td>
                        <td>
                            @if (Model.Published == true)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-warning badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>

                            }
                        </td>

                    </tr>
                    <tr>
                        <td>Trạng thái tin hot:</td>
                        <td>
                            @if (Model.IsHot == true)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-warning badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>

                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Trạng thái tin mới:</td>
                        <td>
                            @if (Model.IsNewfedd == true)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-warning badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>

                            }
                        </td>
                    </tr>

                    <tr>
                        <td>Tag tin:</td>
                        <td class="text-dark font-weight-semibold">@Model.Tags</td>


                    </tr>
                    <tr>
                        <td>Tên bí danh:</td>
                        <td class="text-dark font-weight-semibold">@Model.Alias</td>



                    </tr>
                    <tr>
                        <td>Từ khóa:</td>
                        <td class="text-dark font-weight-semibold">@Model.MetaKey</td>


                    </tr>
                    <tr>
                        <td>MetaDesc:</td>
                        <td class="text-dark font-weight-semibold">@Model.MetaDesc</td>


                    </tr>
                    <tr>
                        <td>Số lượng view:</td>
                        <td class="text-dark font-weight-semibold">@Model.Views</td>


                    </tr>
                    <tr>
                        <td>Xác nhận xóa:</td>
                        <td class="text-dark font-weight-semibold">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="PostId" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </td>


                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>



