@model WebBanHangOnline.Models.News

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<form asp-controller="News" method="post" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                <img src="assets/images/others/thumb-16.jpg" alt="">
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">Skinny Men Blazer</h4>
                <p class="text-muted m-b-0">Code: #5325</p>
            </div>
        </div>
        <div class="m-b-15">
            <button class="btn btn-primary">
                <i class="anticon anticon-save"></i>
                <span>Save</span>
            </button>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
        </li>
    </ul>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                  
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tiêu đề tin:</label>
                        <input type="text" class="form-control" asp-for="Tiltle">
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Mô tả ngắn:</label>
                            <input type="text" class="form-control" asp-for="Scontents">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Mô tả đầy đủ:</label>
                            <input type="text" class="form-control" asp-for="Contents">
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="productPrice">Ảnh tin:</label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group d-flex align-items-center">

                                <div class="switch m-r-10">
                                    <label>Trạng thái tin:</label>
                                    <select id="Published" name="Published" class="list-box tri-state">
                                        <option value="">Not Set</option>
                                        <option value="true">Kích hoạt</option>
                                        <option value="false">Không kích hoạt</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group d-flex align-items-center">

                                <div class="switch m-r-10">
                                    <label>Trạng thái tin hot:</label>
                                    <select id="BestSellers" name="Published" class="list-box tri-state">
                                        <option value="">Not Set</option>
                                        <option value="true">Kích hoạt</option>
                                        <option value="false">Không kích hoạt</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group d-flex align-items-center">

                                <div class="switch m-r-10">
                                    <label>Trạng thái tin mới:</label>
                                    <select id="isNewfedd" name="isNewfedd" class="list-box tri-state">
                                        <option value="">Not Set</option>
                                        <option value="true">Kích hoạt</option>
                                        <option value="false">Không kích hoạt</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productPrice">Bí danh:</label>
                            <input type="text" class="form-control" asp-for="Alias">
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group ">
                            <label asp-for="CreteDate" class="control-label">Ngày tạo tin:</label>
                            <input asp-for="CreteDate" class="form-control" />
                            <span asp-validation-for="CreteDate" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Tác giả:</label>
                            <input type="text" class="form-control" asp-for="Author">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Tài khoảng:</label>
                            <input type="text" class="form-control" asp-for="AccountId">
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productPrice">Tag:</label>
                            <input type="text" class="form-control" asp-for="Tags">
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productCategory">Danh mục sản phẩm</label>

                            <select class="custom-select" asp-for="CatId" style="min-width: 200px;" asp-items="ViewBag.CatId">
                                <option value="0" disabled selected>Chọn danh mục</option>

                            </select>

                        </div>

                    </div>


                    <div class="row">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productPrice">MetaKey:</label>
                            <input type="text" class="form-control" asp-for="MetaKey">
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productPrice">MetaDesc:</label>
                            <input type="text" class="form-control" asp-for="MetaDesc">
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productPrice">Số lượt xem:</label>
                            <input type="text" class="form-control" asp-for="Views">
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>


</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

