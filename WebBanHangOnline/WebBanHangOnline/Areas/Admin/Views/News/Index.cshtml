@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanHangOnline.Models.News>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Danh sách Page"] = "Danh sách Page" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}


<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            @*<a class="breadcrumb-item" asp-area="Admin" asp-controller="Accounts" asp-action="Index">Danh sách tài khoản</a>*@

        <span class="breadcrumb-item active">Danh sách Page:page @CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-12">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" id="idRole" name="idRole" style="min-width: 200px;" asp-items="ViewBag.RoleId">
                            <option value="0" disabled selected>Chọn quyền truy cập</option>

                        </select>

                    </div>
                    <div class="m-b-10">
                        <select class="custom-select" id="idStatus" name="idStatus" style="min-width: 200px;" asp-items="ViewBag.lstrangthai">
                            <option value="" disabled selected>Chọn trạng thái</option>

                        </select>
                    </div>
                </div>
            </div>

        </div>
        <a asp-action="Create" class="dropdown-item d-block p-h-15 p-v-10">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <i class="anticon anticon-plus-circle"></i>
                    <span class="m-l-10 text-danger">Create</span>
                </div>

            </div>
        </a>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Mã Page</th>
                        <th scope="col">Tiêu đề page</th>
                        <th scope="col">Mô tả</th>
                        <th scope="col">Ảnh</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Ngày tạo</th>
                        <th scope="col">Tác giả</th>
                        <th scope="col">Account</th>
                        <th scope="col">Tag</th>
                        <th scope="col">Danh mục</th>
                        <th scope="col">Tin hot</th>
                        <th scope="col">Tin mới</th>
                        <th scope="col">Số người xem</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tiltle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contents)
                        </td>
                        <td><img width="150" height="150" src="~/images/news/@item.Thumb" alt="@item.Tiltle"></td>
                        <td>
                            @if (item.Published == true)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>

                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreteDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tags)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cat.CatName)
                        </td>
                        <td>
                            @if (item.IsHot == true)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-warning badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>

                            }
                        </td>

                        <td>
                            @if (item.IsNewfedd == true)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>

                            }
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Views)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PostId" class="dropdown-item d-block p-h-15 p-v-10">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <i class="anticon anticon-edit"></i>
                                        <span class="m-l-10 text-success    ">Edit</span>
                                    </div>

                                </div>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.PostId" class="dropdown-item d-block p-h-15 p-v-10">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <i class="anticon anticon-delete"></i>
                                        <span class="m-l-10 text-primary">Delete</span>
                                    </div>

                                </div>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.PostId" class="dropdown-item d-block p-h-15 p-v-10">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <i class="anticon anticon-form"></i>
                                        <span class="m-l-10 text-danger">Detail</span>
                                    </div>

                                </div>
                            </a>

                            @*<a class="icon-wrap" asp-action="Edit" asp-route-id="@item.ProductsId">Chỉnh Sửa</a>
            <a class="btn btn-primary m-r-5" asp-action="Details" asp-route-id="@item.ProductsId">Chi Tiêt</a>
            <a class="btn btn-secondary m-r-2" asp-action="Delete" asp-route-id="@item.ProductsId">Xóa</a>*@
                        </td>
                    </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
